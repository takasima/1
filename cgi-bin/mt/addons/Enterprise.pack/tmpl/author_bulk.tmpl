<mt:include name="dialog/header.tmpl" page_title="<__trans phrase="Manage Users in bulk">">

<p class="page_desc"><__trans phrase="_USAGE_AUTHORS_2"></p>

<mt:if name="new_user_default_website_id">
  <mtapp:statusmsg
     id="website-info"
     class="info"
     can_close="0">
    <__trans phrase="New user blog would be created on '[_1]'." params="<strong><mt:var name="new_user_default_website_name" encode_html="1"></strong>">
    <__trans phrase="[_1] Edit</a>" params="<a href='javascript:void(0)' onclick='parent.jQuery.fn.mtDialog.close("<mt:var name="script_full_url">?__mode=cfg_system_users");'>">
  </mtapp:statusmsg>
<mt:else>
  <mtapp:statusmsg
     id="website-info"
     class="info"
     can_close="0">
    <__trans phrase="You must set 'Personal Blog Location' to create a new blog for each new user.">
    <__trans phrase="[_1] Setting</a>" params="<a href='javascript:void(0)' onclick='parent.jQuery.fn.mtDialog.close("<mt:var name="script_full_url">?__mode=cfg_system_users");'>">
  </mtapp:statusmsg>
</mt:if>

<mtapp:form id="import-form" enctype="multipart/form-data" mode="upload_author_bulk">
  <mtapp:settinggroup id="import-options">
    <mtapp:setting
       id="file"
       label_class="top-label"
       label="<__trans phrase="Upload source file">"
       hint="<__trans phrase="Specify the CSV-formatted source file for upload">"
       help_page="author_bulk"
       help_section="source_file">
      <input name="file" id="file" type="file" />
    </mtapp:setting>
    <mtapp:setting
       id="encoding"
       label_class="top-label"
       label="<__trans phrase="Source File Encoding">"
       hint="<__trans phrase="Movable Type will automatically try to detect the character encoding of your import file.  However, if you experience difficulties, you can set the character encoding explicitly.">"
       help_page="author_bulk"
       help_section="source_file_encoding">
      <select name="encoding" id="encoding">
     <mt:loop name="encoding_names">
        <option value="<mt:var name="name" escape="html">"><mt:var name="display_name"></option>
     </mt:loop>
      </select>
    </mtapp:setting>
  </mtapp:settinggroup>

  <mt:setvarblock name="action_buttons">
    <button
       type="submit"
       accesskey="u"
       title="<__trans phrase="Upload (u)">"
       class="action primary button">
      <__trans phrase="Upload">
    </button>
    <button
       onclick="closeDialog(); return false"
       type="submit"
       accesskey="x"
       class="cancel action button mt-close-dialog"
       title="<__trans phrase="Cancel (x)">">
      <__trans phrase="Cancel">
    </button>
  </mt:setvarblock>
  <mt:include name="include/actions_bar.tmpl" bar_position="bottom" hide_pager="1" settings_bar="1">
</mtapp:form>

<mt:include name="dialog/footer.tmpl">
