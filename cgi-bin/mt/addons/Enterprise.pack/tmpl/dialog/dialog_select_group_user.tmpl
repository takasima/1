        <mtapp:statusmsg
            id="generic-info"
            class="info"
            can_close="0">
            <__trans phrase="No groups exist in this installation. [_1]Create a group</a>" params="<a href='javascript:void(0)' onclick='parent.jQuery.fn.mtDialog.close("<mt:var name="script_full_url">?__mode=view&amp;_type=group");'>">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="missing_author">
        <mtapp:statusmsg
            id="generic-info"
            class="info"
            can_close="0">
            <__trans phrase="No users exist in this installation. [_1]Create a user</a>" params="<a href='javascript:void(0)' onclick='parent.jQuery.fn.mtDialog.close("<mt:var name="script_full_url">?__mode=view&amp;_type=author");'>">
