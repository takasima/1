<mt:setvarblock name="html_head" append="1">
<link rel="stylesheet" type="text/css" href="<mt:var name="static_uri">plugins/GroupSorting/css/item_sort.css" />
<link rel="stylesheet" type="text/css" href="<mt:var name="static_uri">addons/ContactForm.pack/css/edit_contactformgroup.css" />
<script type="text/javascript" src="<mt:var name="static_uri">jqueryui/ui.sortable.js"></script>
<script type="text/javascript" src="<mt:var name="static_uri">plugins/GroupSorting/js/item_sort.js"></script>
<script type="text/javascript" src="<mt:var name="static_uri">addons/ContactForm.pack/js/accordion.js"></script>
<script type="text/javascript">
var confirmMsg = '<__trans phrase="Are you sure you want to move to other page?">';
function __toggle_template( cb, obj ) {
    if ( cb.checked == true ) {
        getByID( obj ).style.display = "inline";
        if ( obj == 'mail_admin_tmpl-span' ) {
            getByID( 'send_mailto-field' ).style.display = "block";
            getByID( 'notify_subject-field' ).style.display = "block";
        } else {
            getByID( 'sender_subject-field' ).style.display = "block";
        }
    } else {
        getByID( obj ).style.display = "none";
        if ( obj == 'mail_admin_tmpl-span' ) {
            getByID( 'send_mailto-field' ).style.display = "none";
            getByID( 'notify_subject-field' ).style.display = "none";
        } else {
            getByID( 'sender_subject-field' ).style.display = "none";
        }
    }
}
function check_item () {
    var name = jQuery( '#name' ).val();
    if ( name == '' ) {
        alert( '<__trans phrase="Enter a Form name.">' );
        return false;
    } else {
<mt:if name="names_array">
    varNames = new Array( <mt:var name="names_array"> );
    for ( var i = 0; i <Names.length; i++ ) {
        if (Names[i] == name ) {
            alert( '<__trans phrase="Another Form already exists by that name.">' );
            return false;
        }
    }
</mt:if>
        return true;
    }
}
</script>
</mt:setvarblock>

