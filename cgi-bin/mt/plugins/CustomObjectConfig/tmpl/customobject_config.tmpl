<script type="text/javascript">
jQuery( function() {
    jQuery( '#customobject_sortable' ).sortable( {
        items: 'li',
        distance: 3,
        opacity: 0.8,
        cursor: 'move',
        containment: 'document',
        update: function () {
            customobject_set();
        }
    } );
} );
function set_customobject_display_options() {
    var display_options = new Array();
    var cb_opt = jQuery( "*[name=customobject_display_options_cb]" );
    jQuery.each( cb_opt, function( i ) {
        if ( this.checked ) {
            display_options.push( this.value );
        }
    } );
    display_options = display_options.join( ',' );
    jQuery( '#customobject_display_options' ).val( display_options );
}
<mt:if name="field_order">
    var customobject_list = jQuery( '#customobject_sortable' );
    var customobject_opt = jQuery( '#customobject_opt' );
    var customobject_field_order = '<mt:var name="field_order" escape="js">';
    var customobject_sort_items = customobject_field_order.split( ',' );
    jQuery.each( customobject_sort_items, function( i ) {
        var list = jQuery( '#' + 'customobject_' + this );
        customobject_list.append( list );
        var opt = jQuery( '#' + 'customobject_opt_' + this );
        customobject_opt.append( opt );
    } );
</mt:if>
<mt:if name="display_options">
var customobject_display_options = '<mt:var name="display_options" escape="js">';
var customobject_check_items = customobject_display_options.split( ',' );
jQuery.each( customobject_check_items, function( i ) {
    var cb = jQuery( '#' + 'customobject_display_options_cb_' + this );
    cb.attr( 'checked', true );
} );
<mt:else>
var customobject_cbs = jQuery( "*[name=customobject_display_options_cb]" );
jQuery.each( customobject_cbs, function( i ) {
    var cb = jQuery( '#' + this.id );
    cb.attr( 'checked', true );
} );
set_customobject_display_options();
</mt:if>
function customobject_set() {
    var field_order = new Array();
    var list = jQuery( '#customobject_sortable' );
    var children = list.children();
    jQuery.each( children, function( i ) {
        var ident = this.id + '';
        ident = ident.replace( /^customobject_/, '' );
        field_order.push( ident );
    } );
    field_order = field_order.join( ',' );
    jQuery( '#customobject_field_order' ).val( field_order );
}
</script>
