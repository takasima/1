<__trans_section component="Members">
<$MTBlogID setvar="blog_id"$>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ja" xml:lang="ja">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=<$MTPublishCharset$>" />
		<meta http-equiv="Content-Script-Type" content="text/javascript" />
		<meta http-equiv="Content-Style-Type" content="text/css" />
		<link href="<$MTStaticWebPath$>plugins/PowerCMS/css/login.css" rel="stylesheet" type="text/css" media="screen,print" />
		<title><__trans phrase="Edit Profile"> | <mt:blogname escape="html"></title>
	</head>
	<body class="contents_wide">
		<!-- [contents] -->
		<div id="contents">
			<div class="login_field">
			<div class="login_field_set">
				<div class="login_field_inner">
					<h1 class="logo"><img src="<$MTStaticWebPath$>plugins/PowerCMS/images/login_logo.gif" width="280" height="55" alt="<$MTBlogName$>" /></h1>
					<$MTSetVar name="msg" value=""$>
					<MTIf name="error">
						<MTSetVarBlock name="msg"><$MTGetVar name="error"$></MTSetVarBlock>
					</MTIf>
					
					<MTIf name="msg">
					<div class="msg msg-error"><$MTGetVar name="msg"$></div>
					</MTIf>
					
					<form class="login_form" method="post" action="<$MTGetVar name="script_url"$>" enctype="multipart/form-data">
						<input type="hidden" name="magic_token" value="<$MTGetVar name="magic_token"$>" />
						<input type="hidden" name="__mode" value="profile" />
						<input type="hidden" name="type" value="save" />
						<input type="hidden" name="author_id" value="<$MTAuthorID$>" />
						<input type="hidden" name="blog_id" value="<$MTGetVar name="blog_id"$>" />
						<input type="hidden" name="return_url" value="<$MTGetVar name="return_url" escape="html"$>" />
						<input type="hidden" name="sessid" value="<$MTGetVar name="sessid" escape="html"$>" />
						<table class="form_table">
							<tr>
								<th scope="row"><label for="nickname"><__trans phrase="Display Name"> <img src="<$MTStaticWebPath$>plugins/PowerCMS/images/login_req_01.gif" alt="<__trans phrase="Required">" class="icon_req" /></label></th>
								<td>
									<span class="post_input">
										<input type="text" name="nickname" id="nickname" value="<$MTAuthorDisplayName escape="html"$>" />
									</span>
								</td>
							</tr>
							<tr>
								<th scope="row"><label for="email"><__trans phrase="Email Address"> <img src="<$MTStaticWebPath$>plugins/PowerCMS/images/login_req_01.gif" alt="<__trans phrase="Required">" class="icon_req" /></label></th>
								<td>
									<span class="post_input">
										<input type="text" name="email" id="email" style="ime-mode: disabled;" value="<$MTAuthorEmail escape="html"$>" />
									</span>
									<MTIf name="email_error"><strong class="notice"><__trans phrase="Invalid value"></strong></MTIf>
								</td>
							</tr>
							<tr>
								<th scope="row"><label for="mobile_address"><__trans phrase="Moblie E-mail"></label></th>
								<td>
									<span class="post_input">
										<input type="text" name="mobile_address" id="mobile_address" style="ime-mode: disabled;" value="<MTIgnore><$MTAuthorMobileEmail escape="html"$></MTIgnore>" />
									</span>
									<MTIf name="mobile_error"><strong class="notice"><__trans phrase="Invalid value"></strong></MTIf>
								</td>
							</tr>
							<tr>
								<th scope="row"><label for="mail_token"><__trans phrase="Secret Token"></label></th>
								<td>
									<span class="post_input">
										<input type="password" name="mail_token" id="mail_token" style="ime-mode: disabled;" value="<MTIgnore><$MTAuthorMobileToken escape="html"$></MTIgnore>" />
									</span>
									<MTIf name="token_error"><strong class="notice"><__trans phrase="Invalid value"></strong></MTIf>
								</td>
							</tr>
							<tr>
								<th scope="row" class="v_t"><label for="userpic"><__trans phrase="Userpic"></label></th>
								<td>
									<MTAuthorUserpicAsset setvar="userpic_large">
									<span class="user_pic"><img src="<mt:assetthumbnailurl width="90" height="90">" width="90" height="90" alt="" /></span>
									</MTAuthorUserpicAsset>
									<MTUnless name="userpic_large">
									<span class="user_pic"><img src="<$MTStaticWebPath$>images/default-userpic-90.jpg" width="90" height="90" alt="" /></span>
									</MTUnless>
									<MTGetVar name="userpic_large"><br />
									<input type="file" name="userpic" />
								</td>
							</tr>
							<tr>
								<th scope="row"><label for="password"><__trans phrase="Password Recovery"></label></th>
								<td>
									<span class="post_input">
										<input type="password" name="password" id="password" />
									</span>
									<MTIf name="passwd_error"><strong class="notice"><__trans phrase="Invalid value"></strong></MTIf>
								</td>
							</tr>
							<tr>
								<th scope="row"><label for="pass_verify"><__trans phrase="Confirm Password"></label></th>
								<td>
									<span class="post_input">
										<input type="password" name="pass_verify" id="pass_verify" />
									</span>
								</td>
							</tr>
                            <MTIfPlugin component="MailMagazine">
                            <__trans_section component="MailMagazine">
                            <tr>
                                <th scope="row"><label for="mail_subscription"><__trans phrase="Mail Subscription"></label></th>
                                <td>
                                    <label><input name="mail_subscription" id="mail_subscription"<mt:if name="mail_subscription"> checked="checked"</mt:if> type="checkbox" /> <__trans phrase="Subscribe"></label>
                                </td>
                            </tr>
                            </__trans_section>
                            </MTIfPlugin>
						</table>
						
						<p class="post_submit2">
							<input type="image" src="<$MTStaticWebPath$>plugins/PowerCMS/images/login_btn_save_01.gif" alt="<__trans phrase="Save">" />
						</p>
					</form>
				</div>
			</div>
			</div>
		</div>
		<!-- /[contents] -->
		<hr class="doc_separate" />
		<!-- [footer] -->
		<div id="footer">
			<div id="footer_info">
				<address class="copy">Copyright &copy; <$MTDate format="%Y"$> <$MTBlogName$>. All rights reserved.</address>
			</div>
		</div>
		<!-- /[footer] -->
	</body>
</html>
</__trans_section>