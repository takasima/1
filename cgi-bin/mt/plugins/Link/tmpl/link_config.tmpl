<mtapp:setting
    id="check_outlink"
    label="<__trans phrase="Enable Link check">">
<ul>
<li><input type="checkbox" id="check_outlink" name="check_outlink" <mt:if name="check_outlink">checked="checked"</mt:if> /></li>
</ul>
</mtapp:setting>
<mtapp:setting
    id="default_module_mtml"
    label="<__trans phrase="Module Template">">
<ul>
<li><textarea rows="10" class="text" name="default_module_mtml" id="default_module_mtml"><mt:var name="default_module_mtml" escape="html"></textarea></li>
</ul>
</mtapp:setting>
<mtapp:setting
    id="use_wysiwyg"
    label="<__trans phrase="Use WYSIWYG">">
<ul>
<li><input type="checkbox" onclick="toggle_link_tiny_mce( this )" id="use_wysiwyg" name="use_wysiwyg" <mt:if name="use_wysiwyg">checked="checked"</mt:if> /></li>
</ul>
</mtapp:setting>
<div id="link_tiny_mce" <mt:unless name="use_wysiwyg">style="display:none;"</mt:unless>>
<mtapp:setting
