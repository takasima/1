<script type="text/javascript">
function toggle_link_tiny_mce ( cb ) {
    if ( cb.checked == true ) {
        getByID( 'link_tiny_mce' ).style.display = 'block';
    } else {
        getByID( 'link_tiny_mce' ).style.display = 'none';
    }
}
</script>
