    <label><input type="radio"<mt:if name="page_permission" eq="can_edit_templates"> checked="checked"</mt:if> name="page_permission" id="page_permission0" value="can_edit_templates" /> <__trans phrase="Manage Templates">&nbsp;</label>
    <label><input type="radio"<mt:if name="page_permission" eq="can_manage_pages"> checked="checked"</mt:if> name="page_permission" id="page_permission1" value="can_manage_pages" /> <__trans phrase="Manage Pages">&nbsp;</label>
    <label><input type="radio"<mt:if name="page_permission" eq="can_publish_post"> checked="checked"</mt:if> name="page_permission" id="page_permission2" value="can_publish_post" /> <__trans phrase="Publish Entries">&nbsp;</label>
</mtapp:setting>
