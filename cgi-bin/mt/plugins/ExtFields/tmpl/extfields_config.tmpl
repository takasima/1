<h3 class="medium-header"><__trans phrase="Permission"></h3>
<mtapp:setting
    id="entry_permission"
    label="<__trans phrase="Entry Field Permission">">
    <label><input type="radio"<mt:if name="entry_permission" eq="can_administer_blog"> checked="checked"</mt:if> name="entry_permission" id="entry_permission" value="can_administer_blog" /> <__trans phrase="Blog Administrator">&nbsp;</label>
    <label><input type="radio"<mt:if name="entry_permission" eq="can_edit_templates"> checked="checked"</mt:if> name="entry_permission" id="entry_permission0" value="can_edit_templates" /> <__trans phrase="Manage Templates">&nbsp;</label>
    <label><input type="radio"<mt:if name="entry_permission" eq="can_create_post"> checked="checked"</mt:if> name="entry_permission" id="entry_permission1" value="can_create_post" /> <__trans phrase="Create Entries">&nbsp;</label>
    <label><input type="radio"<mt:if name="entry_permission" eq="can_publish_post"> checked="checked"</mt:if> name="entry_permission" id="entry_permission2" value="can_publish_post" /> <__trans phrase="Publish Entries">&nbsp;</label><br />
    <label><input type="radio"<mt:if name="entry_permission" eq="can_edit_all_posts"> checked="checked"</mt:if> name="entry_permission" id="entry_permission3" value="can_edit_all_posts" /> <__trans phrase="Edit All Entries">&nbsp;</label>
</mtapp:setting>
<mtapp:setting
    id="page_permission"
    label="<__trans phrase="Page Field Permission">">
