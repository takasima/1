<script type="text/javascript">
function toggle_campaign_tiny_mce ( cb ) {
    if ( cb.checked == true ) {
        getByID( 'campaign_tiny_mce' ).style.display = 'block';
    } else {
        getByID( 'campaign_tiny_mce' ).style.display = 'none';
    }
}
</script>