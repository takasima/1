<mtapp:setting
    id="default_status"
    label="<__trans phrase="Default Status">">
<ul>
<li>
    <label>
    <input type="radio" name="default_status" value="1"<mt:if name="default_status" eq="1"> checked="checked"</mt:if> />
    <__trans phrase="Unpublish">&nbsp;
    </label>
    <label>
    <input type="radio" name="default_status" value="2"<mt:if name="default_status" eq="2"> checked="checked"</mt:if> />
    <__trans phrase="Publish">&nbsp;
    </label>
    <label>
    <input type="radio" name="default_status" value="3"<mt:if name="default_status" eq="3"> checked="checked"</mt:if> />
    <__trans phrase="Reserve">&nbsp;
    </label>
    <label>
    <input type="radio" name="default_status" value="4"<mt:if name="default_status" eq="4"> checked="checked"</mt:if> />
    <__trans phrase="End">
    </label>
</ul>
</mtapp:setting>
