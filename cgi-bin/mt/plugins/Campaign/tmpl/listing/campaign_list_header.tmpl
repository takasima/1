<mt:setvarblock name="system_msg" append="1">
<__trans_section component="Campaign">
    <div id="msg-container">
    <mt:if name="dynamic_all">
        <mt:setvar name="rebuild" value="">
    <mt:elseif name="request.no_rebuild">
        <mt:setvar name="rebuild" value="">
    <mt:else>
        <mt:if name="blog_id">
            <mt:setvar name="rebuild" value="all">
        <mt:else>
            <mt:setvar name="rebuild" value="">
        </mt:if>
    </mt:if>
    <mt:if name="request.saved">
        <mtapp:statusmsg
            id="saved"
            class="success"
            rebuild="$rebuild">
            <__trans phrase="Your changes have been saved.">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="request.saved_deleted">
        <mtapp:statusmsg
            id="saved-deleted"
            class="success"
            rebuild="$rebuild">
            <__trans phrase="The Campaign has been deleted from the database.">
        </mtapp:statusmsg>
    </mt:if>

    <mt:if name="request.published">
        <mtapp:statusmsg
            id="saved-published"
            class="success"
            rebuild="all">
                <__trans phrase="The Campaign has been published.">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="request.not_published">
        <mtapp:statusmsg
            id="saved-not_published"
            class="success">
                <__trans phrase="The Campaign has not been published.">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="request.unpublished">
        <mtapp:statusmsg
            id="saved-unpublished"
            class="success"
            rebuild="all">
                <__trans phrase="The Campaign has been unpublished.">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="request.not_unpublished">
        <mtapp:statusmsg
            id="saved-not_unpublished"
            class="success">
                <__trans phrase="The Campaign has not been unpublished.">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="request.reserved">
        <mtapp:statusmsg
            id="saved-reserved"
            class="success"
            rebuild="all">
                <__trans phrase="The Campaign has been reserved.">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="request.not_reserved">
        <mtapp:statusmsg
            id="saved-not_reserved"
            class="success">
                <__trans phrase="The Campaign has not been reserved.">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="request.ended">
        <mtapp:statusmsg
            id="saved-ended"
            class="success"
            rebuild="all">
                <__trans phrase="The Campaign has been ended.">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="request.not_ended">
        <mtapp:statusmsg
            id="saved-not_ended"
            class="success">
                <__trans phrase="The Campaign has not been ended.">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="request.add_tags_to_campaign">
        <mtapp:statusmsg
            id="add_tags_to_campaign"
            class="success">
                <__trans phrase="Added Tags to selected Campaign.">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="request.not_add_tags_to_campaign">
        <mtapp:statusmsg
            id="not_add_tags_to_campaign"
            class="error">
                <__trans phrase="Not added Tags to selected Campaign.">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="request.remove_tags_to_campaign">
        <mtapp:statusmsg
            id="remove_tags_to_campaign"
            class="success">
                <__trans phrase="Remove Tags from selected Campaign.">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="request.not_remove_tags_to_campaign">
        <mtapp:statusmsg
            id="not_remove_tags_to_campaign"
            class="error">
                <__trans phrase="Not removed Tags from selected Campaign.">
        </mtapp:statusmsg>
    </mt:if>
    </div>
</__trans_section>
</mt:setvarblock>