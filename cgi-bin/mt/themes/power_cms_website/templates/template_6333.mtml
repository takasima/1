    </MTIfObjectGroupItemIsBlog>
    <MTIf name="item_link">
    <li><a href="<$MTGetVar name="item_link" escape="html"$>"><$MTGetVar name="item_label" escape="html"$></a></li>
    </MTIf>
    <$MTSetVar name="item_link" value=""$>
    <$MTSetVar name="item_label" value=""$>
    <$MTSetVar name="has_global_nav" value="1"$>
    <$MTSetVar name="count" op="++"$>
</MTObjectGroupItems>
<MTUnless name="has_global_nav">
    <li id="hg_home"><a href="<$MTWebsiteURL escape="html"$>"><__trans phrase="Home"></a></li>
    <MTBlogs include_blogs="children">
    <li><a href="<$MTBlogURL escape="html"$>"><$MTBlogName escape="html"$></a></li>
    </MTBlogs>
</MTUnless>
</ul>
</nav>
</MTUnless>

